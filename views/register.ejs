<html>
    <head>
    <title> inscription </title>    
    <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.css">   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
    $(document).ready(function(){
      $("input").focus(function(){
        $(this).css("background-color", "yellow");
      });
      $("input").blur(function(){
        $(this).css("background-color", "white");
      });
    });
    </script>  
    </head> 

<body>    

    <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3">
            Inscription
          </h1>

          <% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>

            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error.msg %>
            </div>
        
            <% }); %> <% } %>

          <form action="registered" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="name"
                id="name"
                name="nom"
                class="form-control"
                placeholder="Enter Name"
                value="<%= typeof nom != 'undefined' ? nom : '' %>"
              />
            </div>

            <div class="form-group">
              <label for="prenom">Prenom</label>
              <input
                type="prenom"
                id="prenom"
                name="prenom"
                class="form-control"
                placeholder="Entrer votre prenom"
                value="<%= typeof prenom != 'undefined' ? prenom : '' %>"
              />
            </div>

            <div class="form-group">
              <label for="name">Nom d'utilisateur</label>
              <input
                type="text"
                id="username"
                name="username"
                class="form-control"
                placeholder="choisir un Nom d'utilisateur"
                value="<%= typeof username != 'undefined' ? username : '' %>"
              />
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="mail"
                class="form-control"
                placeholder="Enter Email"
                value="<%= typeof mail != 'undefined' ? mail : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="password">Mot de passe</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Create Password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="password2">Confirmer Mot de passe</label>
              <input
                type="password"
                id="password2"
                name="password2"
                class="form-control"
                placeholder="Confirm Password"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">
              Register
            </button>
          </form>
          <p class="lead mt-4">vous avez un compte? <a href="login">Connecter</a></p>
        </div>
      </div>
    </div>

</body>
</html>